@using PasswordManager.Core.Models
@model List<UserViewModels>
@{
    ViewData["Title"] = "GroupDetail";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<style>
    .group-details-container {
        background-color: #f8f9fa; /* Arka plan rengi */
        padding: 10px; /* İçerik etrafındaki boşluk */
        border-radius: 5px; /* Köşelerin yuvarlatılması */
        border: 1px solid #dee2e6; /* Kenar çizgisi */
    }

    .group-detail {
        margin-bottom: 8px; /* Her öğe arasındaki boşluk */
    }

        .group-detail span {
            font-weight: bold; /* Metin kalınlığı */
            color: #495057; /* Metin rengi */
        }

</style>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
            <div class="col-sm-12 col-md-6 col-xl-4">
                <div class="h-100 bg-light rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <h6 class="mb-0">Grup Bilgileri</h6>
                    </div>
                   @*  <div class="d-flex align-items-center border-bottom py-3">
                        <div class="w-100 ms-3">
                            <div class="group-details-container">
                                <h6 class="group-detail">Grup Adı: <span>@ViewBag.Group.GroupName</span></h6>
                                <h6 class="group-detail">Grup Açıklama: <span>@ViewBag.Group.GroupDescription</span></h6>
                                <h6 class="group-detail">Şirket: <span>@ViewBag.Group.CompanyName</span></h6>
                                <h6 class="group-detail">Oluşturulma Tarihi: <span>@ViewBag.Group.CreationDate</span></h6>
                            </div>
                        </div>
                    </div> *@
                <div class="d-flex align-items-center border-bottom py-3">
                    <div class="w-100 ms-3">
                        <div class="group-details-container">
                            <h6 class="group-detail">Grup Adı: <span>@ViewBag.Group.GroupName</span></h6>
                          
                        </div>
                    </div>
                </div>
                <div class="d-flex align-items-center border-bottom py-3">
                    <div class="w-100 ms-3">
                        <div class="group-details-container">
   
                            <h6 class="group-detail">Grup Açıklama: <span>@ViewBag.Group.GroupDescription</span></h6>
                   
                        </div>
                    </div>
                </div>
                <div class="d-flex align-items-center border-bottom py-3">
                    <div class="w-100 ms-3">
                        <div class="group-details-container">
                          
                            <h6 class="group-detail">Şirket: <span>@ViewBag.Group.CompanyName</span></h6>
 
                        </div>
                    </div>
                </div>
                <div class="d-flex align-items-center border-bottom py-3">
                    <div class="w-100 ms-3">
                        <div class="group-details-container">
      
                            <h6 class="group-detail">Oluşturulma Tarihi: <span>@ViewBag.Group.CreationDate</span></h6>
                        </div>
                    </div>
                </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-xl-4">
                <div class="h-100 bg-light rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <h6 class="mb-0">Grup Üyeleri</h6>
                    </div>
                    @foreach (var item in Model)
                    {
                        <div class="d-flex align-items-center border-bottom py-3">
                            <img class="rounded-circle flex-shrink-0" src="~/dashmin-1.0.0/img/user.jpg" alt="" style="width: 40px; height: 40px;">
                            <div class="w-100 ms-3">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-0">@item.UserName</h6>
                                    <small>@item.LevelName</small>
                                </div>                    
                            </div>
                        </div>
                    }              
                </div>
            </div>
    </div>
</div>

